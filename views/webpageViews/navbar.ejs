<body>

    <nav class="keepcode-navbar">
        <div class="left-navbar">
            <a class="" href="#">
                <h3><span class="logo">K</span>eep<span class="logo">C</span>ode</h3>
            </a>
            <ul>
                <li class="">
                    <a class="<%= currentPath==='/'?'active':'' %>" href="/">Home</a>
                </li>
                <li class="">
                    <a class="<%= currentPath==='/about'?'active':'' %>" href="/about">About</a>
                </li>
                <li class="">
                    <a class="<%= currentPath==='/join-free-class'?'active':'' %>" href="/join-free-class">Join Free Class</a>
                </li>
                <li class="">
                    <a class="<%= currentPath==='/roadmap'?'active':'' %>" href="/roadmap">Roadmap</a>
                </li>
